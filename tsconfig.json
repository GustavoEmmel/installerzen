{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
